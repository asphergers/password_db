<p style="color: green"><%= notice %></p>

<h1>Passwords</h1>
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Website</th>
        <th>Username</th>
        <th>Password</th>
        <th>Date Added</th>
        <th>Options</th>
        
      </tr>
    </thead>
    <tbody>
      <% @password_infos.each do |password_info| %>
        <tr>
          <td><%= password_info.website %></td>
          <td><%= password_info.username %></td>
          <td><%= password_info.password %></td>
          <td><%= password_info.date_added %></td>

          <td>
          <%= link_to "Edit", edit_password_info_path(password_info)%>
           /
          <%= link_to "View", password_info_path(password_info)%> 
           / 
          <%= link_to "Delete", password_info,
            method: :delete,
            data: {
              confirm: "are you sure?"
            }%>
          </td>
          
        </tr>
      <% end %>
    </tbody>
</table>

<%= link_to "New password info", new_password_info_path %>
